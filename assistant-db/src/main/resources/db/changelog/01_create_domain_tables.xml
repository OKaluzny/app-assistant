<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">

    <!--==========================================================================================-->
    <changeSet author="Oleg_Kaluzny" id="Create trucks table_01">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="${prefix}_${table.name}"/>
            </not>
        </preConditions>
        <createTable tableName="${prefix}_${table.name}">
            <column name="id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="manufacturer" type="VARCHAR(50)"/>
            <column name="model" type="VARCHAR(50)"/>
        </createTable>
    </changeSet>
    <!--==========================================================================================-->
    <changeSet author="Oleg_Kaluzny" id="Create trucks table_02">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="${prefix}_${table.name}"/>
            <not>
                <primaryKeyExists primaryKeyName="${prefix}_${table.name}_pk"
                                  tableName="${prefix}_${table.name}"/>
            </not>
        </preConditions>

        <addPrimaryKey columnNames="id"
                       constraintName="${prefix}_${table.name}_pk"
                       tableName="${prefix}_${table.name}"/>
    </changeSet>
    <!--==========================================================================================-->
    <changeSet author="Oleg_Kaluzny" id="Create trucks table_03">
        <preConditions onFail="MARK_RAN">
            <not>
                <sequenceExists sequenceName="${prefix}_${table.name}_id_seq"/>
            </not>
        </preConditions>
        <createSequence sequenceName="${prefix}_${table.name}_id_seq"/>
    </changeSet>
    <!--==========================================================================================-->
    <changeSet author="Oleg_Kaluzny" id="Create trucks table_04">
        <createSequence sequenceName="hibernate_sequence"/>
    </changeSet>
    <!--==========================================================================================-->
</databaseChangeLog>
